---
import Layout from '../../layouts/Layout.astro';
import IdleLogout from '../../ui/components/system/IdleLogout';
---

<Layout title="Prueba de inactividad">
  <IdleLogout client:load />

  <div style={{ padding: '2rem' }}>
    <h1>Página de prueba</h1>
