{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Astro Project",
  "extends": "./style-guide/tsconfig/base.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@PubSub/*": ["./PubSub/*"],
      "@icons": ["./ui/utils/svg-icons/icons"],
      "@services/*": ["./services/*"]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "plugins": [
      {
        "name": "@astrojs/ts-plugin"
      }
    ]
  }
}
